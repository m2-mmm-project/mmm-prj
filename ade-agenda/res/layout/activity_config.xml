<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_btns"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/layout_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_date_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_date_start"
                android:textAlignment="center" />

            <DatePicker
                android:id="@+id/date_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />

            <TextView
                android:id="@+id/label_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_date_end"
                android:textAlignment="center" />

            <DatePicker
                android:id="@+id/date_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />

            <Spinner
                android:id="@+id/project_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/project_arrays"
                android:prompt="@string/project_prompt" />

            <Spinner
                android:id="@+id/resource_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/resource_arrays"
                android:prompt="@string/resource_prompt" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickLoad"
            android:text="@string/btn_load_calendar" />

        <Button
            android:id="@+id/btn_valid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_back" />
    </LinearLayout>

</RelativeLayout>